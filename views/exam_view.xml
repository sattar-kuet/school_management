<?xml version="1.0" encoding="utf-8" ?>

<odoo>
     <record id="view_exam_tree" model="ir.ui.view">
        <field name="name">Exam List Tree</field>
        <field name="model">school_management.exam</field>
        <field name="arch" type="xml">
            <tree create="true" edit="true">
                <field name="name" />
                <field name="class_config"  />
                <field name="status" />
                 <button attrs="{'invisible': ['|', '|', ('status', '=', 'setup_done'), ('status', '=', 'processing'), ('status', '=', 'result_published')]}"  name="setup_exam_config" string="Setup" type="object"
                    class="btn btn-primary"></button>
                <button attrs="{'invisible': ['|', '|', ('status', '=', 'pending'), ('status', '=', 'processing'), ('status', '=', 'result_published')]}" name="processing" string="Processing" type="object"
                    class="btn btn-primary"></button>
                <button attrs="{'invisible': ['|', '|', ('status', '=', 'pending'), ('status', '=', 'setup_done'),('status', '=', 'result_published')]}" name="result_publishing" string="Publish Result" type="object"
                    class="btn btn-primary"></button>
            </tree>
        </field>
     </record>
     <record id="view_exam_form" model="ir.ui.view">
        <field name="name">school_management.exam.form</field>
        <field name="model">school_management.exam</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" placeholder="Exam Name" />
                        <field name="class_config" />
                        <field name="status" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_exam" model="ir.actions.act_window">
            <field name="name">Exam List</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">school_management.exam</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_school_managementiling_face"> Create your first First Exam</p>
            </field>
    </record>
    <menuitem 
            name="Exam"
            id="menu_exam_list"
            sequence="1"
            action="action_exam"
            parent="menu_data"/>

</odoo>