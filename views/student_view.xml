<?xml version="1.0" encoding="utf-8" ?>

<odoo>
     <record id="view_student_tree" model="ir.ui.view">
        <field name="name">Student List Tree</field>
        <field name="model">res.users</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"></field>
                <field name="code"></field>
                <field name="roll"></field>
                <field name="blood_group"></field>
                <field name="guardian"></field>
                <field name="class_config"></field>
                
            </tree>
        </field>
     </record>
     <record id="view_student_form" model="ir.ui.view">
        <field name="name">school_management.students.form</field>
        <field name="model">res.users</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" placeholder="Student Name" />
                        <field name="code" placeholder="Code" />
                        <field name="roll" placeholder="Student Roll" />
                        <field name="blood_group" widget="radio" options="{'horizontal': True}" />
                        <field name="guardian" />
                        <field name="class_config" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_student" model="ir.actions.act_window">
            <field name="name">Student List</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.users</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'default_is_student': True,'module' : 'school_management', 'bin_size': False}</field>
            <field name="domain">[('groups_id.name','=','Student')]</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('school_management.view_student_tree')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('school_management.view_student_form')})
                          ]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_school_managementiling_face"> Create your First Student</p>
            </field>
    </record>
    <menuitem 
            name="Student"
            id="menu_student_list"
            sequence="0"
            action="action_student"
            parent="menu_data"/>

</odoo>