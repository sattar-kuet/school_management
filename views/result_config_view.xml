<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="view_result_config_tree" model="ir.ui.view">
        <field name="name">Result Config List Tree</field>
        <field name="model">school_management.result_config</field>
        <field name="arch" type="xml">
            <tree>
                <field name="exam_computed"/>
                <field name="subject"/>
                <field name="written_pass_mark" placeholder="Example: 33" />
                <field name="written_max_mark" placeholder="Example: 33" />
                <field name="mcq_pass_mark" placeholder="Example: 33" />
                <field name="mcq_max_mark" placeholder="Example: 33" />
                <field name="practical_pass_mark" placeholder="Example: 33" />
                <field name="practical_max_mark" placeholder="Example: 33" />

            </tree>
        </field>
    </record>
    <record id="view_result_form" model="ir.ui.view">
        <field name="name">school_management.result.form</field>
        <field name="model">school_management.result_config</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="exam" />
                        <field name="subject">
                            <tree>
                                <field name="title"/>
                                <field name="subject" widget="many2many_tags"/>
                            </tree>
                        </field>
                        <field name="has_written"  />
                        <field name="has_mcq"  />
                        <field name="has_practical"  />
                        <field name="written_pass_mark" attrs="{'invisible': [('has_written', '=', False)]}" />
                        <field name="written_max_mark" attrs="{'invisible': [('has_written', '=', False)]}" />
                        <field name="mcq_pass_mark" attrs="{'invisible': [('has_mcq', '=', False)]}" />
                        <field name="mcq_max_mark" attrs="{'invisible': [('has_mcq', '=', False)]}" />
                        <field name="practical_pass_mark" attrs="{'invisible': [('has_practical', '=', False)]}" />
                        <field name="practical_max_mark" attrs="{'invisible': [('has_practical', '=', False)]}" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_result_config" model="ir.actions.act_window">
        <field name="name">Regult Config List</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">school_management.result_config</field>
        <field name="view_mode">tree,form</field>
        <field name="target">current</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_school_managementiling_face"> Create your first Result Config</p>
        </field>
    </record>
    <menuitem
            name="Result config"
            id="menu_result_config_list"
            sequence="0"
            action="action_result_config"
            parent="menu_Result"/>

</odoo>