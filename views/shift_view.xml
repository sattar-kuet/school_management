<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="view_shift_tree" model="ir.ui.view">
        <field name="name">Shift Tree</field>
        <field name="model">school_management.shift</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="end_time" />
            </tree>
        </field>
    </record>
    <record id="view_shift_form" model="ir.ui.view">
        <field name="name">school_management.shift.form</field>
        <field name="model">school_management.shift</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <div class="row">
                            <div class="col-md-3"> Start Time</div>
                            <div class="col-md-2 time-input"> <field name="start_time_hh"/></div>
                            <div class="col-md-1 time-seperator">:</div>
                            <div class="col-md-2 time-input"> <field name="start_time_mm"/></div>
                            <div class="col-md-2 meridiem"> <field name="meridiem"/></div>
                        </div>
                        <field name="name" />

                        <field name="end_time" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_shift" model="ir.actions.act_window">
        <field name="name">Shift</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">school_management.shift</field>
        <field name="view_mode">tree,form</field>
        <field name="target">current</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_school_managementiling_face"> Create your first Shift</p>
        </field>
    </record>
    <menuitem
            name="Shift"
            id="menu_shift_list"
            sequence="6"
            action="action_shift"
            parent="menu_data"/>

</odoo>