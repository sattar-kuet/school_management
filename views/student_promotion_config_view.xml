<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="view_student_promotion_config_tree" model="ir.ui.view">
        <field name="name">student promotion config List Tree</field>
        <field name="model">sm.student.promotion.config</field>
        <field name="arch" type="xml">
            <tree>
                <field name="type" />
            </tree>
        </field>
    </record>
    <record id="view_student_promotion_config_form" model="ir.ui.view">
        <field name="name">school_management.student.promotion.config. form</field>
        <field name="model">sm.student.promotion.config</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="type" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_student_promotion_config" model="ir.actions.act_window">
        <field name="name">Notice List</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sm.student.promotion.config</field>
        <field name="view_mode">tree,form</field>
        <field name="target">current</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_school_managementiling_face"> Create your first student promotion config</p>
        </field>
    </record>
    <menuitem
            name="Student Promotion"
            id="menu_student_promotion_config_list"
            sequence="9"
            action="action_student_promotion_config"
            parent="menu_sm_root"/>

</odoo>