<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="view_teacher_activity_tree" model="ir.ui.view">
        <field name="name">Shift Tree</field>
        <field name="model">sm.teacher.activity</field>
        <field name="arch" type="xml">
            <tree>
                <field name="teacher" />
                <field name="subject" />
                <field name="class_config" />
            </tree>
        </field>
    </record>
    <record id="view_teacher_activity_form" model="ir.ui.view">
        <field name="name">school_management.teacher.activity.form</field>
        <field name="model">sm.teacher.activity</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="teacher" />
                        <field name="subject" />
                        <field name="class_config" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_teacher_activity" model="ir.actions.act_window">
        <field name="name">Teacher Activity</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sm.teacher.activity</field>
        <field name="view_mode">tree,form</field>
        <field name="target">current</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_school_managementiling_face"> Create your first Teacher Activity</p>
        </field>
    </record>
    <menuitem
            name="Teacher Activity"
            id="menu_teacher_activity_list"
            sequence="7"
            action="action_teacher_activity"
            parent="menu_data"/>

</odoo>